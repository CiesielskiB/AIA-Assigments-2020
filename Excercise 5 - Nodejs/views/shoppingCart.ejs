<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Checkout</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<% var gamesInShoppingCart = gamesInCart; %>

<body>

  <body>
    <div class="d-flex justify-content-between container">
      <div>
          <h1>GameStart shopping cart</h1>
      </div>
      <div>
        <a href="/" class="btn btn-primary m-2">Back to shop</a>
      </div>
    </div>
      <main role="main" class="container">
        <div class="row">
          <% if(userMessage) { %>
            <div id="message" class="d-flex flex-column justify-content-center mb-4">
              <div class="d-flex justify-content-center">
                <p><%= userMessage %></p>
              </div>
              <div class="d-flex justify-content-center">
                <button class="btn-sm btn-primary" id="dissmissMessage">OK
              </div>
            </div>
          <% } %>
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Game title</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% for (var i = 0; i < gamesInShoppingCart.length; i++) { %>
                <tr>
                  <td><%= gamesInShoppingCart[i].Title %></td>
                  <td>
                    <button gameId='<%= gamesInShoppingCart[i].Id %>' class="btn btn-danger">Remove</button>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <div class="row">
          <%if(gamesInShoppingCart.length > 0) { %>
          <div id="buyGames" class="btn btn-success mr-2" disabled>purchase all games</div>
          <div id="cleanCart" class="btn btn-danger" disabled>remove all games</div>
          <% } %>
        </div>
      </main>
    <script type="text/javascript" src="/scripts/shoppingCart.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>

</html>