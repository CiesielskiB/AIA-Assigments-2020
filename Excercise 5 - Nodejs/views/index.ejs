<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>Online shop</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<% var gamesInShop = games; %>
<% var gamesInShoppingCart = gamesInCart; %>
<body>
  <div class="d-flex justify-content-between container">
    <div>
        <h1>GameStart online shop</h1>
    </div>
    <div>
      <a href="\shoppingCart" class="btn btn-primary m-2">Shopping cart</a>
    </div>
  </div>
    <main role="main" class="container">
          <% if(userMessage) { %>
          <div id="message" class="d-flex flex-column justify-content-center mb-4">
            <div class="d-flex justify-content-center">
              <p><%= userMessage %></p>
            </div>
            <div class="d-flex justify-content-center">
              <button class="btn-sm btn-primary" id="dissmissMessage">OK
            </div>
          </div>
        <% } %>
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Game title</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < gamesInShop.length; i++) { %>
              <tr>
                <td><%= gamesInShop[i].Title %></td>
                <td>
                  <% if(gamesInShoppingCart.some(it => it.Id == gamesInShop[i].Id)) { %>
                  <button class="btn btn-info" disabled>Added to cart</button>
                  <% } else { %>
                  <button gameId='<%= gamesInShop[i].Id %>'  class="btn btn-info">Add to cart</button>
                  <% } %>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
        <% if(gamesInShop.length <= 0){ %>
            <p>no games in the store</p>
        <% } %>
    </main>

  <script type="text/javascript" src="/scripts/index.js"></script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>